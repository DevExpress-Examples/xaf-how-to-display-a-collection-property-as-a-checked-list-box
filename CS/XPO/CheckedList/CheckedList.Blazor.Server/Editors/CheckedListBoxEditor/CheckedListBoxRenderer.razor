@using Microsoft.AspNetCore.Components.Web
@using CheckedList.Module

<DxListBox Data="@ComponentModel.DataSource"
           ReadOnly="@ComponentModel.ReadOnly"
           TextFieldName="@ComponentModel.FieldName"
           SelectionMode="@ListBoxSelectionMode.Multiple"
           ShowCheckboxes="true"
           @bind-Values="@Values"
           @attributes=@ComponentModel.Attributes>
</DxListBox>

@code {
    [Parameter]
    public CheckedListBoxModel ComponentModel { get; set; }
    public static RenderFragment Create(CheckedListBoxModel componentModel) =>
        @<CheckedListBoxRenderer ComponentModel=@componentModel />;
    private IEnumerable<object> Values {
        get => ComponentModel.Values;
        set => ComponentModel.SetValueFromUI(value);
    }
}
